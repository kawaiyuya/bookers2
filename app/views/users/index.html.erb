<div class="container-fluid">
	<div class="row">
		<div class="col-md-3">
			<h2>UsersInfo</h2>
			<%= attachment_image_tag @user, :profile_image, fallback: 'no_image.jpg',size: '100x100'%>
			<table>
				<thead>
				</thead>
					<tbody>
						<tr>
					 		<th>name</th>
							<th><%= current_user.name %></th>
						</tr>
						<tr>
						 	<th>Introduction</th>
						 	<th><%= current_user.introduction_id%></th>
						</tr>
					</tbody>
			</table>
				<%= link_to"",edit_user_path(current_user),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}"%>
			<h2>New Book</h2>
			<%= form_for(@book) do |f| %>
				<h4>Title</h4>
			    <%= f.text_field :title,class:"col-xs-12 book_title"%>
			    <h4>Opinion</h4>
			    <%= f.text_area :opinion,class:"col-xs-12 book_title"%>
			    <%= f.submit 'Create Book',class:"btn btn-primary col-xs-12"%>
			<% end %>
		</div>

		<div class="col-md-9">
			<h2>Users</h2>
			<table class="table">
			    <thead>
			        <tr>
			            <th>image</th>
			            <th>name</th>
			            <th></th>
			            <th colspan="3"></th>
			        </tr>
			    </thead>
			    <tbody>
			        
		        	<% @users.each do |user| %>
			        	<tr>
				            <th><%= attachment_image_tag user, :profile_image, fallback: 'no_image.jpg',size: '100x100'%></th>
				            <td><%= user.name %></td>
				            <td><%= link_to"Show",user_path(user.id),class:"user_#{user.id}"%></td>
				        </tr>
		            <% end %>
			        

			    </tbody>
			</table>
		</div>
	</div>
</div>


