<!DOCTYPE html>
<html>
  <head>
    <title>BookersKadai</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
     <div class="container-fluid">
      <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

       <a class="navbar-brand">Bookers</a>
      </div>


    <div class="collapse navbar-collapse" id="navbarEexample">
      <ul class="nav navbar-nav navbar-right">
          <li>
            <% if user_signed_in? %>
          <li>
            <%= link_to"ホーム",user_path(current_user.id),class:"glyphicon glyphicon-home home" %>
          </li>
          <li>
            <%= link_to"User一覧",users_path,class:"glyphicon glyphicon-user users"%>
          </li>
          <li>
            <%= link_to"Book一覧",books_path,class:"glyphicon glyphicon-book books"%>
          </li>
          <li>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete,class:"glyphicon glyphicon-log-out logout"%>
          </li>
          <% else %>
          <h1></h1>
          </li>
          <li >
           <%= link_to"トップ",root_path,class:"glyphicon glyphicon-home"%>
          </li>
          <li >
            <%= link_to"アバウト",home_about_path,class:"glyphicon glyphicon-link about" %>
          </li>
          <li >
            <%= link_to 'サインアップ',users_sign_up_path,class:"glyphicon glyphicon-edit sign_up"%>
          </li>
          <li >

            <%= link_to"ログイン",users_sign_in_path,class:"glyphicon glyphicon-log-in sign_in"%>
          </li>
          <% end %>
      </ul>
    </div>
  </div>
</nav>
    <%= yield %>
  </body>
</html>
