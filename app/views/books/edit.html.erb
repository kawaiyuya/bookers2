<div class="row">
	<div class="col-md-6 col-md-offset-3">
	<h1>Editing Book</h1>

	<%= form_for(@book) do |f| %>
	<div class="field row">
	<h4>title</h4>
	<%= f.text_field :title,class:"col-xs-12 book_title"%>
	</div>

	<div class="actions row">
	<h4>opinion</h4>
	<%= f.text_area :opinion,class:"col-xs-12 book_body"%>
	</div>

	<%= f.submit 'Userupdate',class:"btn btn-primary col-xs-12"%>
<% end %>

<%= link_to'back',books_path(@book),class:"back"%>|
<%= link_to'show',book_path(@book),class:"book_#{@book.id}"%>
