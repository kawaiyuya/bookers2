
<div class="container-fluid">
	<div class="row">
		<div class="col-md-3">
			<%= render'books/list',book: @book, user: @user%>
		</div>




		<div class="col-md-9">
			<h2>books</h2>
			<table class="table">
			    <thead>
			        <tr>
			            <th></th>
			            <th>title</th>
			            <th>opinion</th>
			            <th colspan="3"></th>
			        </tr>
			    </thead>
			    <tbody>
			   
		        	<% @books.each do |book| %>
			        	<tr>
				            <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, fallback: 'no_image.jpg',size: '100x100'%></td>
				            <td><%= link_to book.title, book_path(book),class: "book_#{book.id}" %></td>
				            <td><%= book.opinion %></td>
				        </tr>
		            <% end %>
			        
			    </tbody>
			</table>
		</div>
	</div>
</div>
