<div class="container-fluid">
<div class="row">

	<div class="col-md-3">
		<%= render'books/list', book: @book, user: @user %>
	</div>


    <div class="col-md-9">
			<h2>book detail</h2>
			<table class="table">
			    <thead>
			        <tr>
			        	<th></th>
			            <th></th>
			            <th></th>
			            <th></th>
			        </tr>
			    </thead>

