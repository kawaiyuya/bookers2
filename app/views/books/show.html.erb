<div class="container-fluid">
<div class="row">

	<div class="col-md-3">
		<%= render'books/list', book: @book, user: @user %>
	</div>


    <div class="col-md-9">
			<h2>book detail</h2>
			<table class="table">
			    <thead>
			        <tr>
			        	<th></th>
			            <th></th>
			            <th></th>
			            <th></th>
			        </tr>
			    </thead>

			    <tbody>
			        <tr>
			        	<td><%=  attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: 'no_image.jpg',size: '100x100' %><br><%= link_to @user.name,user_path(@user),class:"user_#{@user}"%></td>
						<td><%= @bookf.title %></td>
						<td><%= @bookf.opinion %></td>
						<% if current_user == @bookf.user %>
						<td><%= link_to'edit', edit_book_path(@bookf.id), class: "btn-sm btn-success edit_book_#{@bookf.id}" %></td>
						<td><%= link_to'destroy', book_path(@bookf.id),class: "btn-sm btn-danger destroy_book_#{@bookf.id}", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
						<% end %>
			        </tr>
				</tbody>
			</table>
	</div>
</div>
</div>